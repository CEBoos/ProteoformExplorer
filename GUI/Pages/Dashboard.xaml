<Page x:Class="ProteoformExplorer.Dashboard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProteoformExplorer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Proteoform Explorer">
    
    <Page.Resources>
        <ResourceDictionary>
            <Style x:Key="ButtonStyle" TargetType="Button">
                <Setter Property="BorderBrush" Value="Blue"/>
                <Setter Property="Background" Value="AliceBlue"/>
                <Setter Property="BorderThickness" Value="2"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <WpfPlot Name="DashboardPlot1" Grid.Row="0" Grid.Column="0" />

        <WpfPlot Name="DashboardPlot2" Grid.Row="0" Grid.Column="1" />

        <WpfPlot Name="DashboardPlot3" Grid.Row="0" Grid.Column="2" />

        <Button Grid.Row="1" Grid.Column="0" Content="TIC View" Click="Chart1_Click" Style="{StaticResource ButtonStyle}" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Grid.Row="1" Grid.Column="1" Content="Species View" Click="Chart2_Click" Style="{StaticResource ButtonStyle}" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>

        <Button Grid.Row="1" Grid.Column="2" Content="Stacked XIC View" Click="Chart3_Click" Style="{StaticResource ButtonStyle}" >
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Page>
