<Page x:Class="GUI.Modules.DataLoading"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GUI.Modules"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataLoading">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Name="selectSpectraFileButton" Content="Select" Width="70"/>
            <Button Grid.Row="1" Name="loadFiles" Content="Load" Width="70"/>
            <ListView Grid.Row="2" Name="selectedFiles" Width="200" />
            <ProgressBar Grid.Row="3" Name="dataLoadingProgressBar" Width="300" />
            <Button Grid.Row="4" Name="goToDashboard" Content="Go to dashboard" Width="120"/>
        </Grid>
    </Grid>
</Page>
